<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="TipCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TipCalculator"
    FlyoutBehavior="Flyout"
    Title="TipCalculator" TabBarIsVisible="False">

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent Title="Restaurants" Route="RestaurantsPage" ContentTemplate="{DataTemplate local:RestaurantsPage}" Icon="restaurant.svg" />
        <ShellContent Title="Feedback" Route="FeedbackPage" ContentTemplate="{DataTemplate local:FeedbackPage}" Icon="feedback.svg" />
        <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}" Icon="info.svg" />
</Shell>