<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.RestaurantsPage" xmlns:local="clr-namespace:TipCalculator"
             x:DataType="local:RestaurantsPage" xmlns:models="clr-namespace:TipCalculator.Models">
    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Add" x:Name="AddButton" Clicked="AddButton_OnClicked"/>
            <CollectionView ItemsSource="{Binding Restaurants}" x:Name="Collection" SelectionChanged="Collection_OnSelectionChanged" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Restaurant">
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*">
                            <Image Source="{Binding ImageUrl}" />
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="{Binding Name}" />
                                <Label Text="{Binding TipPercentage, StringFormat='Tip percentage {0:P}'}"
                                       TextColor="LightGrey" />
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>